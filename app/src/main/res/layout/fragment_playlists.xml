<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.playlists.PlaylistsFragment">

    <!-- Ваш основной контент -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Плавающая кнопка для создания нового плейлиста -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createPlaylistFAB"
        android:layout_width="69dp"
        android:layout_height="72dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="155dp"
        android:backgroundTint="@color/darkgray"
        android:contentDescription="Create Playlist"
        android:scaleType="center"
        android:src="@drawable/media3_icon_playlist_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
